    {
      "name": "Logs",
      "item": [
        {
          "name": "Get Action Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/logs?page=1&page_size=20",
              "host": ["{{baseUrl}}"],
              "path": ["logs"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "20"
                },
                {
                  "key": "action_type",
                  "value": "comment_reply",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "success",
                  "disabled": true
                }
              ]
            },
            "description": "Get paginated action logs with optional filters"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Verify Webhook (GET)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/webhooks/instagram?hub.mode=subscribe&hub.verify_token=your-verify-token&hub.challenge=test-challenge",
              "host": ["{{baseUrl}}"],
              "path": ["webhooks", "instagram"],
              "query": [
                {
                  "key": "hub.mode",
                  "value": "subscribe"
                },
                {
                  "key": "hub.verify_token",
                  "value": "your-verify-token"
                },
                {
                  "key": "hub.challenge",
                  "value": "test-challenge"
                }
              ]
            },
            "description": "Verify Instagram webhook subscription"
          },
          "response": []
        },
        {
          "name": "Handle Webhook (POST)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Hub-Signature-256",
                "value": "sha256=your-computed-signature"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"object\": \"instagram\",\n  \"entry\": [\n    {\n      \"id\": \"instagram-account-id\",\n      \"time\": 1704067200,\n      \"changes\": [\n        {\n          \"field\": \"comments\",\n          \"value\": {\n            \"id\": \"comment-id\",\n            \"text\": \"Great post!\",\n            \"from\": {\n              \"id\": \"user-id\",\n              \"username\": \"commenter\"\n            }\n          }\n        }\n      ]\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/webhooks/instagram",
              "host": ["{{baseUrl}}"],
              "path": ["webhooks", "instagram"]
            },
            "description": "Handle incoming Instagram webhook events"
          },
          "response": []
        }
